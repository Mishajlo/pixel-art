{
    "compilerOptions": {
        "lib": ["ESNext"],
        "target": "esnext",
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "skipLibCheck": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}